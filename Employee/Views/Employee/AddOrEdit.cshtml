@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


@model Employee

<h3 style="text-align: center;">Employee List</h3>
<div class="container-fluid">
    <form asp-action="AddOrEdit" method="post">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <select asp-for="Title" class="form-control">
                        <option value="Mr">Mr</option>
                        <option value="Mrs">Mrs</option>
                    </select>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="EmpCode" class="control-label"></label>
                    <input asp-for="EmpCode" class="form-control " />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Designation" class="control-label"></label>
                    <input asp-for="Designation" class="form-control " />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control " />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control " />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Manager" class="control-label"></label>
                    <input asp-for="Manager" class="form-control" />
                    <span asp-validation-for="Manager" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input asp-for="CreatedDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control " />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Add" : "Update")</button>
            </div>
        </div>
    </form>
</div>




<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p id="successMessage">@TempData["SuccessMessage"]</p>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<br />


<div class="container-fluid">
    <table id="employeesTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>FullName</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Employee code</th>
                <th>Age</th>
                <th>Email</th>
                <th>Designation</th>
                <th>Manager</th>
                <th>CreatedDate</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                "pagingType": "simple",
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "ajax": {
                    "url": "/api/Employee/",
                    "type": "GET",
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "title" },
                    { "data": "fullName" },
                    { "data": "firstName" },
                    { "data": "lastName" },
                    { "data": "empCode" },
                    { "data": "age" },
                    { "data": "email" },
                    { "data": "designation" },
                    { "data": "manager" },
                    {
                        "data": "createdDate",
                        "render": function (data) {
                            var date = new Date(data);
                            var day = date.getDate();
                            var month = date.getMonth() + 1;
                            var year = date.getFullYear();
                            return (day < 10 ? '0' : '') + day + '/' + (month < 10 ? '0' : '') + month + '/' + year;
                        }
                    },
                    { "data": "description" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return '<a href="/Employee/AddOrEdit/' + row.id + '" class="btn btn-primary btn-sm">Edit</a> ' +
                                '<a href="/Employee/Delete/' + row.id + '" class="btn btn-danger btn-sm" onclick="return confirm(\'Are you sure you want to delete this item?\')">Delete</a>';
                        }
                    }
                ]
            });

            $('#createForm').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        $('#employeesTable').DataTable().ajax.reload();
                        $('#successMessage').text(response.successMessage);
                        $('#successModal').modal('show');
                        setTimeout(function () {
                            location.reload();
                        }, 2000);
                        form[0].reset();
                        window.location.href = "/Employee/AddOrEdit"; // Redirect to the Add page
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });


        });
        $(document).ready(function () {
            if ('@TempData["SuccessMessage"]' !== '') {
                $('#successMessage').text('@TempData["SuccessMessage"]');
                $('#successModal').modal('show');
                setTimeout(function () {
                    $('#successModal').modal('hide');
                }, 5000);
            }
        });

    </script>

}

<style>
    .custom-width {
        width: 100%;
    }

    .alert-success {
        background-color: #dff0d8;
        border-color: #d6e9c6;
        color: #3c763d;
        padding: 10px;
        margin-top: 10px;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        margin-right: 10px;
    }

</style>


