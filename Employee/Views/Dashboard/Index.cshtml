@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="dashboard">
    <h3 style="text-align: center;">Welcome to the Dashboard</h3> 
    <br />
    <div class="graph-chart" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <div id="barChart" style="flex: 0 0 40%;">
            <canvas id="barChartCanvas"></canvas>
        </div>
        <div id="lineChart" style="flex: 0 0 40%;">
            <canvas id="lineChartCanvas"></canvas>
        </div>

        <div id="areaChart" style="flex: 0 0 40%;">
         
            <canvas id="areaChartCanvas"></canvas>
        </div>
        <div id="scatterChart" style="flex: 0 0 40%;">
            <canvas id="scatterChartCanvas"></canvas>
        </div>
        <div id="pieChart" style="flex: 0 0 40%;">
            <canvas id="pieChartCanvas"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Bar Chart
        var barChartCanvas = document.getElementById('barChartCanvas').getContext('2d');
        var barChart = new Chart(barChartCanvas, {
            type: 'bar',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Sales',
                    data: [120, 150, 180, 200, 220, 250],
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Line Chart
        var lineChartCanvas = document.getElementById('lineChartCanvas').getContext('2d');
        var lineChart = new Chart(lineChartCanvas, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Revenue',
                    data: [500, 600, 550, 700, 650, 800],
                    backgroundColor: 'rgba(255, 99, 132, 0.5)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Pie Chart
        var pieChartCanvas = document.getElementById('pieChartCanvas').getContext('2d');
        var pieChart = new Chart(pieChartCanvas, {
            type: 'pie',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple'],
                datasets: [{
                    data: [12, 19, 3, 5, 2],
                    backgroundColor: ['rgba(255, 99, 132, 0.5)', 'rgba(54, 162, 235, 0.5)', 'rgba(255, 206, 86, 0.5)', 'rgba(75, 192, 192, 0.5)', 'rgba(153, 102, 255, 0.5)'],
                    borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 206, 86, 1)', 'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });

        // Area Chart
        var areaChartCanvas = document.getElementById('areaChartCanvas').getContext('2d');
        var areaChart = new Chart(areaChartCanvas, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Profit',
                    data: [200, 300, 250, 400, 350, 500],
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Scatter Chart
        var scatterChartCanvas = document.getElementById('scatterChartCanvas').getContext('2d');
        var scatterChart = new Chart(scatterChartCanvas, {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Data',
                    data: [
                        { x: 10, y: 20 },
                        { x: 15, y: 25 },
                        { x: 20, y: 30 },
                        { x: 25, y: 35 },
                        { x: 30, y: 40 }
                    ],
                    backgroundColor: 'rgba(153, 102, 255, 0.5)',
                    borderColor: 'rgba(153, 102, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        type: 'linear',
                        position: 'bottom'
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}


