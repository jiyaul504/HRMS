@using static Employee.Helpers.NavigationIndicatorHelper;


<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">HRMS</span>
    </a>
    <div class="sidebar">
@if (User.Identity.IsAuthenticated)
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">Hi, @User.Identity.Name </a>
        </div>
    </div>
}
else
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="info">
            <a href="#" class="d-block">Hi, Visitor</a>
        </div>
    </div>
}
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link @Url.MakeActiveClass("dashboard","index")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("home","privacy")">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                Privacy
                            </p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a asp-controller="Employee" asp-action="AddOrEdit" class="nav-link @Url.MakeActiveClass("Employee","AddOrEdit")">
                            <i class="nav-icon fas fa-user"></i>
                            <p>
                                Employee
                            </p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link @Url.MakeActiveClass("LeaveRequest","Index")">
                            <i class="nav-icon fas fa-user"></i>
                            <p>
                                Approval
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="LeaveRequest" asp-action="Create" class="nav-link @Url.MakeActiveClass("LeaveRequest","Create")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Add LeaveRequest</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                }
            </ul>
        </nav>
    </div>
</aside>